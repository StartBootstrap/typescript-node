{
    "name": "typescript-node",
    "version": "0.1.0",
    "engines": {
        "node": ">=14.0.0"
    },
    "description": "An example repo for the Typescript and Node talk at Dev Intersection June 9th 2021",
    "main": "index.js",
    "scripts": {
        "build": "npm run clean && tsc -p tsconfig.app.json",
        "build:dev": "tsc -p tsconfig.app.json",
        "build:scripts": "tsc -p tsconfig.scripts.json && mv dist/src/* dist && rmdir dist/src",
        "clean": "rm -rf dist/*",
        "debug": "npm run clean && npm run build:scripts && export TS_NODE_PROJECT=tsconfig.scripts.json && node --es-module-specifier-resolution=node --loader ts-node/esm -r dotenv/config ./scripts/debug.ts",
        "script": "export TS_NODE_PROJECT=tsconfig.scripts.json && node --es-module-specifier-resolution=node --loader ts-node/esm -r dotenv/config",
        "serve:coverage": "static-server ./coverage/lcov-report 9754",
        "start": "npm run clean && npm run build:scripts && export TS_NODE_PROJECT=tsconfig.scripts.json && node --es-module-specifier-resolution=node --loader ts-node/esm -r dotenv/config ./scripts/start.ts",
        "test:debug": "node --experimental-vm-modules --inspect-brk node_modules/.bin/jest --runInBand",
        "test:watch-all": "npm run jest -- --coverage --watchAll",
        "test:watch": "npm run jest -- --coverage --watch",
        "test": "npm run jest -- --coverage",
        "test:one": "npm run jest -t -- ",
        "ts-node": "export TS_NODE_PROJECT=tsconfig.scripts.json && node --es-module-specifier-resolution=node --loader ts-node/esm -r dotenv/config",
        "jest": "npm run jest:clear && node --experimental-vm-modules node_modules/.bin/jest",
        "jest:clear": "node --experimental-vm-modules node_modules/.bin/jest --clearCache",
        "uuid:ossp": "npm run ts-node scripts/prisma/uuid-ossp-extension.ts"
    },
    "devDependencies": {
        "@inip/static-server": "1.0.1",
        "@types/bcrypt": "5.0.0",
        "@types/jest": "26.0.23",
        "@types/jsonwebtoken": "8.5.1",
        "@types/lodash": "4.14.170",
        "@types/node": "15.12.2",
        "@types/pino": "6.3.8",
        "@types/pug": "2.0.4",
        "@types/shelljs": "0.8.8",
        "@types/tsc-watch": "4.2.0",
        "@typescript-eslint/eslint-plugin": "4.26.1",
        "@typescript-eslint/parser": "4.26.1",
        "dotenv": "10.0.0",
        "eslint": "7.28.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-import": "2.23.4",
        "eslint-plugin-jest": "24.3.6",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-prettier": "3.4.0",
        "eslint-plugin-simple-import-sort": "7.0.0",
        "fork-ts-checker-webpack-plugin": "6.2.10",
        "jest": "27.0.4",
        "jest-mock-extended": "1.0.15",
        "prettier": "2.3.1",
        "ts-jest": "27.0.3",
        "ts-loader": "9.2.3",
        "typescript": "4.3.2",
        "upath": "2.0.1",
        "webpack": "5.38.1"
    },
    "dependencies": {
        "@inip/http-codes": "2.0.0",
        "@prisma/client": "2.24.1",
        "@sbpro/ng": "1.4.2",
        "bcrypt": "5.0.1",
        "chalk": "4.1.1",
        "crypto-random-string": "3.3.1",
        "fastify": "3.17.0",
        "fastify-cors": "6.0.1",
        "fastify-helmet": "5.3.1",
        "got": "11.8.2",
        "jsonwebtoken": "8.5.1",
        "lodash": "4.17.21",
        "moment": "2.29.1",
        "pg": "8.6.0",
        "pino-pretty": "5.0.2",
        "prisma": "2.24.1",
        "shelljs": "0.8.4",
        "ts-node": "10.0.0",
        "tsc-watch": "4.4.0"
    },
    "imports": {
        "#app/*": "./dist/app/*",
        "#features/*": "./dist/features/*",
        "#lib/*": "./dist/lib/*",
        "#public-types/*": "./dist/public-types/*",
        "#src/*": "./dist/*"
    },
    "type": "module",
    "license": "MIT"
}
